generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model teams {
  team_id       String          @id
  team_name     String
  team_password String
  users         users[]
  team_progress team_progress[]
}

model users {
  EnrollNo String @id
  name     String
  team_id  String
  team     teams  @relation(fields: [team_id], references: [team_id])
}

model questions {
  question_id          String          @id
  question_text        String
  question_description String
  answer               String
  team_progress        team_progress[]
}

model team_progress {
  progress_id            String                   @id
  team_id                String
  question_id            String
  is_completed           Boolean
  is_Restricted          Boolean
  team                   teams                    @relation(fields: [team_id], references: [team_id])
  question               questions                @relation(fields: [question_id], references: [question_id])
  question_time_tracking question_time_tracking[]
}

model question_time_tracking {
  tracking_id   String        @id
  progress_id   String
  question_id   String
  time_solved   DateTime
  team_progress team_progress @relation(fields: [progress_id], references: [progress_id])
}
